<html>
    <head>

        <!--Always lode angular first and then all other scripts-->
        <!--<link rel="stylesheet" href="stylesheets/css/bootstrap.css">-->
        <link rel="stylesheet" href="stylesheets/simpleFormStyle.css">
        <!--<script type="text/javascript" src="angular.min.js"></script>-->
